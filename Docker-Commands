#Jenkins install/run
docker run -p 8222:8222 -p 50000:50000 -v "C:/Docker/jenkins_home":/var/jenkins_home -v "C:/Docker/jenkins_certs":/certs/client:ro -v /var/run/docker.sock:/var/run/docker.sock -e DOCKER_CERT_PATH=/certs/client -e JENKINS_OPTS="--httpPort=8222" --name jenkins jenkins/jenkins
#docker-jenkins
docker run -p 8222:8222 -p 50000:50000 -v "C:/Docker/jenkins_home":/var/jenkins_home -v "C:/Docker/jenkins_certs":/certs/client:ro -v /var/run/docker.sock:/var/run/docker.sock -e DOCKER_CERT_PATH=/certs/client -e JENKINS_OPTS="--httpPort=8222" --name jenkins docker-jenkins
